<odoo>
    <data>
        <!-- Form view for Legal Form -->
        <record id="view_legal_form_form" model="ir.ui.view">
            <field name="name">legal.form.form</field>
            <field name="model">associates.legal_form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="country_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree view for Legal Form -->
        <record id="view_legal_form_tree" model="ir.ui.view">
            <field name="name">legal.form.tree</field>
            <field name="model">associates.legal_form</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
