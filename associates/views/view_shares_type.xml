<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Share Type form view -->
        <record id="view_share_type_form" model="ir.ui.view">
            <field name="name">associates.share.type.form</field>
            <field name="model">associates.share.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="company_id"/>
                            <field name="country_id"/>
                            <field name="custom_code"/>
                        </group>
                        <group string="Options">
                            <field name="dividend_fixed"/>
                            <field name="dividend_priority"/>
                            <field name="vote_agm"/>
                            <field name="vote_egm"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Share Type tree view -->
        <record id="view_share_type_tree" model="ir.ui.view">
            <field name="name">associates.share.type.tree</field>
            <field name="model">associates.share.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
