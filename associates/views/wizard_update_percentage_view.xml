<odoo>
    <record id="view_update_percentage_wizard_form" model="ir.ui.view">
        <field name="name">update.percentage.wizard.form</field>
        <field name="model">associates.update_percentage_wizard</field>
        <field name="arch" type="xml">
            <form string="Update Share Percentage">
                <p>
                    By clicking the Update button, you will update the share percentage held by each associate.
                </p>
                <footer>
                    <button name="update_percentage" string="Update" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
